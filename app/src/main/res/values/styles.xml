<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Content">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginHorizontal">0dp</item>
    </style>
    <style name="MainMenuButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:backgroundTint">@color/bg_light</item>
        <item name="android:textColor">@color/fg_dark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="rippleColor">@color/selection_light_bg</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/fg_dark</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="PageHeaderContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="PageHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/fg_secondary</item>
    </style>
    <style name="PageHeaderButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:backgroundTint">@color/bg_primary</item>
        <item name="tint">@color/fg_secondary</item>
    </style>
    <style name="Spacer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ControlWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="RegularText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/fg_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ListButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:padding">7dp</item>
        <item name="android:backgroundTint">@color/bg_primary</item>
        <item name="android:textColor">@color/fg_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="rippleColor">@color/selection</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/fg_tertiary</item>
    </style>
    <style name="TextInputWrapper">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="EditText">
        <item name="android:background">@color/bg_secondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/fg_tertiary</item>
        <item name="android:textColor">@color/fg_dark</item>

    </style>
    <style name="TextInputWrapperIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">@color/fg_tertiary</item>
    </style>

    <style name="TrackListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@drawable/custom_ripple</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/fg_secondary</item>

    </style>
    <style name="TrackDetails">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/fg_tertiary</item>
    </style>
    <style name="TrackCoverMedium">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
    </style>
    <style name="TrackCoverContainer" parent="CardView">
        <item name="cardCornerRadius">6dp</item>
    </style>
    <style name="ListItemDetails">
        <item name="android:padding">10dp</item>
    </style>
    <style name="NotFoundImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="srcCompat">@drawable/not_found_light</item>
    </style>
    <style name="NoInternetImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="srcCompat">@drawable/no_internet_light</item>
    </style>
    <style name="ErrorTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fg_primary</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SmallRoundButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/fg_primary</item>
        <item name="android:textColor">@color/bg_primary</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

</resources>